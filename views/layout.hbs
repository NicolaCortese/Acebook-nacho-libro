<html>
  <head>
    <title>{{title}}</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div id="nav-bar"><ul id="nav-ul">
        {{#if session.username}}
          <li class="nav-li" id="li-timeline"><a href="/posts">Timeline</a></li>
          <li class="nav-li" id="li-post"><a href="/posts/new">Post</a></li>
          <li class="nav-li" id="li-profile"><a
              href="/users/profile"
            >{{session.username}}'s profile</a></li>
          <li class="nav-li" id="li-sign-out">
            <form action="/sessions?_method=DELETE" method="POST">
              <input
                type="submit"
                class="link-button"
                id="btn-sign-out"
                value="Sign out"
              />
            </form></li>
        {{else}}
          <li class="nav-li" id="li-sign-in"><a href="/sessions/new">Sign in</a></li>
          <li class="nav-li" id="li-sign-up"><a
              href="/users/new"
              id="signup"
            >Sign up</a></li>
        {{/if}}
      </ul>
    </div>

    {{! Flash Notice Message }}
    {{#if message}}
      <div style="text-align: center;" class="alert alert-{{message.type}}">
        <strong>{{message.message}}</strong>
      </div>
    {{/if}}

    {{{body}}}
    <script src="/javascripts/axios.min.js"></script>
    <script type="text/javascript" src="/javascripts/likes.js"></script>
  </body>
</html>